    script.
      var socket = io.connect('http://localhost:1000');
      //socket.emit("coOverV", "Connection a overview.pug <=> socket.io rÃ©ussi.")

      socket.on("godChoose1", (result)=>{
        console.log("godChoose1: "+result);
